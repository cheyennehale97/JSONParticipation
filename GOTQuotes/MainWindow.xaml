        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GOTQuotes"
        mc:Ignorable="d"
        Title="GOTQuotes?" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="684*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="https://cdn.hipwallpaper.com/i/73/74/zri6Qg.jpg" Stretch="UniformToFill"></ImageBrush>
        </Grid.Background>
        <TextBlock x:Name="quote" HorizontalAlignment="Right" Margin="0,0,604,237" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Bottom" Height="154" Width="161" Grid.ColumnSpan="2"/>
